{
  "name": "elux",
  "version": "0.1.0",
  "description": "A lightweight, TypeScript-first, SSR/SSG-capable fullstack framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "dev": "set NODE_ENV=development && tsx --experimental-specifier-resolution=node server.ts",
    "dev:hmr": "set NODE_ENV=development && tsx --watch --experimental-specifier-resolution=node server.ts",
    "build": "vite build",
    "start": "set NODE_ENV=production && node dist/server.js",
    "clean": "rimraf dist",
    "dev:vite": "vite",
    "preview": "vite preview",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "keywords": [
    "framework",
    "typescript",
    "ssr",
    "ssg",
    "vite"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.5.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "fast-glob": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3",
    "vite": "^4.5.1",
    "vitest": "^0.34.6"
  }
}
